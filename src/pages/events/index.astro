---
import BaseLayout from '@/layouts/BaseLayout.astro';
import events from '@/pages/events/_events.json';
const title = "Events";
const description = "Public lectures and forums.";
---
<BaseLayout {title} {description}>
  <h1 class="text-2xl font-semibold">Events</h1>
  <p class="mt-2 text-slate-600">Add event markdown files under <code>src/pages/events/</code>, then list them in <code>_events.json</code> or render dynamically.</p>
  <ul class="mt-6 space-y-4">
    {events.map(e => (
      <li class="border rounded-xl p-4">
        <div class="text-sm text-slate-500">{e.date}</div>
        <a class="text-lg font-semibold hover:underline" href={e.href}>{e.title}</a>
        <p class="text-slate-600 mt-1">{e.summary}</p>
      </li>
    ))}
  </ul>
</BaseLayout>
