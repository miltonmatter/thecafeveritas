---
import BaseLayout from '@/layouts/BaseLayout.astro';
const title = "Contact — Café Veritas";
const description = "Send us a message.";
---
<BaseLayout {title} {description}>
  <h1 class="text-2xl font-semibold">Contact</h1>
  <form method="POST" action="/api/contact" class="mt-6 max-w-xl space-y-4 border rounded-2xl p-6">
    <div class="grid md:grid-cols-2 gap-4">
      <label class="block text-sm">
        <span class="font-medium">Name</span>
        <input required name="name" class="mt-1 w-full rounded-lg border px-3 py-2" />
      </label>
      <label class="block text-sm">
        <span class="font-medium">Email</span>
        <input required type="email" name="email" class="mt-1 w-full rounded-lg border px-3 py-2" />
      </label>
    </div>
    <label class="block text-sm">
      <span class="font-medium">Message</span>
      <textarea required name="message" rows="6" class="mt-1 w-full rounded-lg border px-3 py-2"></textarea>
    </label>
    <input type="text" name="website" class="hidden" tabindex="-1" autocomplete="off" />
    <button class="rounded-xl bg-brand-600 text-white px-4 py-2 hover:bg-brand-700">Send</button>
  </form>
</BaseLayout>
