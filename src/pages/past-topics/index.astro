---
import BaseLayout from '@/layouts/BaseLayout.astro';
const topics = await Astro.glob('./*.md');
const title = "Past Topics";
const description = "Browse prior forums by theme.";
---
<BaseLayout {title} {description}>
  <h1 class="text-2xl font-semibold">Past Topics</h1>
  <div class="grid md:grid-cols-3 gap-6 mt-6">
    {topics.map(t => (
      <a href={`/past-topics/${t.file.split('/').pop().replace('.md','')}/`} class="border rounded-2xl p-4 hover:shadow">
        <div class="font-semibold">{t.frontmatter.title || t.file}</div>
        <p class="text-sm text-slate-600 mt-1">{t.frontmatter.summary || "View details"}</p>
      </a>
    ))}
  </div>
</BaseLayout>
